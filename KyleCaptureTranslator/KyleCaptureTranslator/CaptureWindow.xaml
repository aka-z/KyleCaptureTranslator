<Window x:Class="KyleCaptureTranslator.CaptureWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KyleCaptureTranslator"
        mc:Ignorable="d"
        Title="CaptureWindow" Height="300" Width="300" AllowsTransparency="True" Opacity="0.8"
        WindowStyle="None" KeyDown="OnWindow_KeyDown" Background="White" WindowState="Maximized"
        MouseDown="OnWindow_MouseDown" MouseMove="OnWindow_MouseMove" MouseUp="OnWindow_MouseUp">
  <Grid>
    <Rectangle Name="captureRect" StrokeThickness="5" Stroke="Red" Visibility="Hidden" VerticalAlignment="Top" HorizontalAlignment="Left"/>
  </Grid>
</Window>
